html {
  scroll-padding-top: calc(var(--layout-height-header) + 50px);
}

.docs-header {
  display: flex;
  justify-content: space-between;
  flex-shrink: 0;
  padding: 12px var(--layout-padding-horizontal);
  border-bottom: 1px solid var(--color-line-gray);
  font-size: 18px;
  flex-wrap: wrap;
  box-sizing: border-box;
  position: sticky;
  top: 0;
  background: var(--color-bg-header);
  z-index: 10;

  @media (--not-mobile) {
    height: var(--layout-height-header);
  }

  &__menu-link,
  &__logo {
    display: inline-block;
    text-decoration: none;
    align-self: center;
    line-height: 24px;
  }

  &__logo {
    padding: 4px 0;
    font-weight: bold;
    color: inherit;
  }

  &__menu-link {
    font-weight: 500;
    transition: background-color .13s;

    &--active {
      background-color: var(--color-link-active) !important;
    }

    padding: .15rem 0.25rem;
    @apply --squircle;
    /* @media (--not-mobile) {
    } */

    &:hover {
      background-color: var(--color-link-hover);
    }
  }

  &__menu {
    display: flex;
    margin: 0;
    gap: .625rem;
    padding-left: 0;
    font-size: 1rem;

    @media (--mobile) {
      margin-top: 6px;
      flex-basis: 100%;
      font-size: 14px;
    }

    li {
      display: inline-flex;
      align-items: center;
      list-style: none;

      @media (--mobile) {
        margin-left: 0;
        margin-right: .5rem;
      }
    }

    li&-desktop {
      @media (--mobile) {
        display: none;
      }
    }

    &-mobile {
      display: none;

      @media (--mobile) {
        display: block;
        position: absolute;
        right: 0;
        top: var(--layout-padding-vertical);
        margin-top: 0;
        line-height: 1em;
      }
    }

    .vr-divider {
      border-left: 1px solid var(--color-line-gray);
      height: 100%;
      margin: 0 .5rem;
    }
  }
}
